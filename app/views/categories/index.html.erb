<div class="panel panel-primary">
  <div class="panel-heading">
    <%= t ".panel_title" %>
  </div>
  <div class="panel-body">
    <% @categories.each do |cat| %>
      <% if cat.id % 2 == 0 %>
        <div class="row category">
          <div class="col-md-6 category-picture">
            <%= image_tag cat.picture, size: "350x150" %>
          </div>
          <div class="col-md-6">
            <h3>
              <b><%= cat.name %></b>
            </h3>
            <br>
            <%= cat.description%>
            <br>
            <%= link_to t(".start"), lessons_path(category_id: cat.id), class: "btn btn-success" %>
          </div>
        </div>
      <% else %>
        <div class="row category">
          <div class="col-md-6">
            <h3>
              <b><%= cat.name %></b>
            </h3>
            <br>
            <%= cat.description%>
            <br>
            <%= link_to t(".start"), lessons_path(category_id: cat.id), method: :post, class: "btn btn-success" %>
          </div>
          <div class="col-md-6 category-picture">
            <%= image_tag cat.picture, size: "350x150" %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>