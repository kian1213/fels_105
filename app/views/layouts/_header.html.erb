<header class="navbar navbar-fixed-top navbar-inverse">
  <div class ="container">
  <nav>
    <%= link_to image_tag("framgia_logo.png", alt: "Framgia logo", size:"50x50"),
      t(".tablink_website") %>
    <ul class ="nav bar navbar-nav pull-right">
      <li><%= link_to t(".tablink_home"), root_path %></li>
      <% if logged_in? %>
        <li><%= link_to t(".tablink_users"), users_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t ".tablink_account" %>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t(".tablink_profile"), current_user %></li>
            <li><%= link_to t(".tablink_setting"), edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li><%= link_to t(".tablink_logout"), logout_path, method: "delete" %></li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to t(".tablink_login"), login_path %></li>
      <% end %>
    </ul>
  </nav>
</header>