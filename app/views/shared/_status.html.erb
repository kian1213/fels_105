<% @user ||= current_user %>
<a href="<%= relationships_path @user, type: 'following' %>">
  <strong id="following" class="stat">
    <%= @user.following.count %>
  </strong>
  <%= t ".following" %>
</a>
<a href="<%= relationships_path @user, type: 'followers' %>">
  <strong id="followers" class="stat">
    <%= @user.followers.count %>
  </strong>
  <%= t ".followers" %>
</a>