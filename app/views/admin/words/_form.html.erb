<%= form_for [:admin, @word], html: {multipart: true,
  class: "form-horizontal style-form"} do |f| %>
  <div class="form-group">
    <%= f.label :content, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :content, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :category_id, "Category", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :category_id, @categories, :id, :name,
        {prompt: "Select a category"}, {class: "form-control"} %>
    </div>
  </div>
  <%= t ".list_of_answers" %>
  <%= f.fields_for :answers do |builder| %>
    <%= render "answer_fields", f: builder %>
  <% end %>
  <div class="added-answer"></div>
  <%= link_to_add_fields t(".add_answer"), f, :answers,
    "btn btn-primary add-remove-answer", t(".add_new_answer") %>
  <div class="form-group">
    <div class="col-sm-12">
      <%= f.submit class: "btn btn-success pull-right" %>
    </div>
  </div>
<% end %>