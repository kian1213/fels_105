<div class="form-group fields">
  <%= f.hidden_field :id %>
  <%= f.label :content, t(".answer"), class: "col-sm-2 control-label" %>
  <div class="col-sm-4">
    <%= f.text_field :content, class: "form-control" %>
  </div>
  <%= f.label :correct, class: "col-sm-2 control-label" %>
  <div class="col-sm-2">
    <%= f.check_box :correct, class: "form-control" %>
  </div>
  <div class="col-sm-2">
    <%= f.hidden_field :_destroy, class: "removable" %>
    <%= link_to_remove_fields t(".remove"), f, "btn btn-danger" %>
  </div>
</div>