<b><%= t ".list" %></b>
<table class="table table-striped table-advance table-hover">
  <tbody>
    <% @word_answers.each do |answer| %>
      <tr>
        <td>
          <%= answer.content %>
        </td>
        <td>
          <% if answer.correct? %>
            <%= t ".correct" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>