<div class="panel panel-primary">
  <div class="panel-heading">
    <%= t ".panel_title" %>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <div class="row user-profile">
          <%= link_to image_tag @user.avatar, size: "150x150" %>
        </div>
        <div class="row user-profile">
          <%= @user.full_name %>
        </div>
        <div class="row user-profile">
          <%= render "shared/status" %>
          <% if @users.any? %>
            <div class="user_avatars">
              <% @users.each do |user| %>
                <%= link_to image_tag(user.avatar, size: "30x30"), user %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-md-8">
        <div class="col-md-8">
          <h3><%= @title %></h3>
          <% if @users.any? %>
            <ul class="users follow">
              <%= render @users %>
            </ul>
            <%= will_paginate @users %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>