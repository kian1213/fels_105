<div class="panel panel-primary">
  <div class="panel-heading">
    <%= t ".panel_title" %>
  </div>
  <div class="panel-body">
    <table class="table table-striped table-advance table-hover table-alignment">
      <tbody>
        <% @lesson_words.each do |words| %>
          <tr>
            <% if words.correct %>
              <td><div class="glyphicon glyphicon-ok"></div></td>
            <% else %>
              <td><div class="glyphicon glyphicon-remove"></div></td>
            <% end %>
            <td><%= words.word.content %></td>
            <td><%= words.answer.content %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>